<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/gestures_experience_settings">

    <PreferenceCategory android:key="gestures_setting_category"
            android:title="@string/gestures_experience_settings">

        <SwitchPreference
                android:key="gesture_mode"
                android:title="@string/gesture_mode"
                />
      </PreferenceCategory>
      
      <PreferenceCategory android:key="gestures_setting_category"
            android:title="@string/gestures_settings">

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_up"
                android:dependency="gesture_mode" />    

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_down"
                android:dependency="gesture_mode" />  
                
         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_c"                
                android:dependency="gesture_mode" />

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_e"
                android:dependency="gesture_mode" />
       
         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_m"
                android:dependency="gesture_mode" />  	                

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_o"
                android:dependency="gesture_mode" />   

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_w"
                android:dependency="gesture_mode" />

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_s"
                android:dependency="gesture_mode" />

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_v"
                android:dependency="gesture_mode" />

         <com.android.settings.MySwitchPreference
                android:key="gestures_settings_z"
                android:dependency="gesture_mode" />

    </PreferenceCategory>
</PreferenceScreen>

