<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/smart_action">

    <PreferenceCategory android:key="smart_action_title"
            android:title="@string/smart_action_title">

        <SwitchPreference
                android:key="smart_action"
                android:title="@string/smart_action"
				android:summaryOn="@string/smart_action_summary_on"
				android:summaryOff="@string/smart_action_summary_off"
                />
    </PreferenceCategory>
                
				
    <PreferenceCategory android:key="smart_action_items"
            android:title="@string/smart_action_items">
                
         <SwitchPreference
                android:key="flip_to_silence"
                android:title="@string/flip_to_silence"
                android:summary="@string/flip_to_silence_summary"
                android:dependency="smart_action"
                />
                
         <SwitchPreference
                android:key="flip_to_speaker"
                android:title="@string/flip_to_speaker"
                android:summary="@string/flip_to_speaker_summary"
                android:dependency="smart_action"
                />
                
         <SwitchPreference
                android:key="flip_to_snooze_alarm"
                android:title="@string/flip_to_snooze_alarm"
                android:summary="@string/flip_to_snooze_alarm_summary"
                android:dependency="smart_action"
                />
                
         <SwitchPreference
                android:key="decrease_ring_on_move"
                android:title="@string/decrease_ring_on_move"
                android:summary="@string/decrease_ring_on_move_summary"
                android:dependency="smart_action"
                />
                
         <SwitchPreference
                android:key="quick_launch_camera"
                android:title="@string/quick_launch_camera"
                android:summary="@string/quick_launch_camera_summary"
                android:dependency="smart_action"
                />
                
         <SwitchPreference
                android:key="quick_launch_phone"
                android:title="@string/quick_launch_phone"
                android:summary="@string/quick_launch_phone_summary"
                android:dependency="smart_action"
                />                                

    </PreferenceCategory>
</PreferenceScreen>

